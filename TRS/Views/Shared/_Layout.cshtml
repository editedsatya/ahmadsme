    <script>

        function SetCulture(culture) {

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SetCulture", "Base")?culture=' + culture,

                    success: function (data) {

                        if (data.success) {
                            window.location.reload();

                        }
                    }

                });



        }

        $(function () {
            var menuName='@ViewContext.RouteData.Values["Action"].ToString()' + '@ViewContext.RouteData.Values["controller"].ToString()';

             var menuItem = document.getElementById("left-sidebar-menu-"+ menuName).parentElement.parentElement;
         //alert("ID From Route Data: " + menuItem.id);

            var menuItem = $('#' + menuItem.id);
            menuItem.addClass('active');
            var subMenuItem = menuItem.find('#left-sidebar-menu-'+ menuName);
            subMenuItem.addClass('active');

        });



